<VAST version="3.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="vast.xsd">
  <Ad id="12345">
    <InLine>
      <AdSystem version="1.0">ThebesAds</AdSystem>
      <AdTitle>Sample VPAID Ad</AdTitle>
      <Impression><![CDATA[https://vast.thebesads.com/track/impression]]></Impression>

      <Creatives>
        <!-- VPAID Creative -->
        <Creative sequence="1" id="vpaid1">
          <Linear>
            <Duration>00:00:30</Duration>
            <MediaFiles>
              <MediaFile
                apiFramework="VPAID"
                type="application/javascript"
                delivery="progressive"
                maintainAspectRatio="true"
                scalable="true">
                <![CDATA[https://vast.thebesads.com/vpaid-creative.js]]>
              </MediaFile>
            </MediaFiles>
            <AdParameters><![CDATA[
              {
                "clickThroughUrl": "https://your-landing-page.com",
                "clickTrackers": ["https://vast.thebesads.com/track/click"],
                "mediaFiles": [{"uri": "https://vast.thebesads.com/video/my-ad-video.mp4"}]
              }
            ]]></AdParameters>
          </Linear>
        </Creative>

        <!-- Fallback MP4 Creative -->
        <Creative sequence="2" id="fallback1">
          <Linear>
            <Duration>00:00:30</Duration>
            <MediaFiles>
              <MediaFile
                type="video/mp4"
                delivery="progressive"
                width="640"
                height="360">
                <![CDATA[https://vast.thebesads.com/video/my-ad-video.mp4]]>
              </MediaFile>
            </MediaFiles>
            <VideoClicks>
              <ClickThrough><![CDATA[https://your-landing-page.com]]></ClickThrough>
              <ClickTracking><![CDATA[https://vast.thebesads.com/track/click]]></ClickTracking>
            </VideoClicks>
          </Linear>
        </Creative>

        <!-- Companion Banner -->
        <Creative id="companion1">
          <CompanionAds>
            <Companion width="300" height="250">
              <StaticResource creativeType="image/jpeg">
                <![CDATA[https://vast.thebesads.com/images/side-banner.jpg]]>
              </StaticResource>
              <CompanionClickThrough><![CDATA[https://your-landing-page.com]]></CompanionClickThrough>
            </Companion>
          </CompanionAds>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>
</VAST>
