<?xml version="1.0" encoding="UTF-8"?>
<VAST xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="3.0" xsi:noNamespaceSchemaLocation="vast.xsd">
  <Ad id="12345">
    <InLine>
      <AdSystem version="1.0">ThebesAds</AdSystem>
      <AdTitle>Sample VAST Ad with Left and Bottom Banners</AdTitle>
      <Impression><![CDATA[ https://vast.thebesads.com/track/impression ]]></Impression>
      <Creatives>
        <Creative sequence="1" id="linear1">
          <Linear>
            <Duration>00:00:30</Duration>
            <MediaFiles>
              <MediaFile type="video/mp4" delivery="progressive" width="640" height="360">
                <![CDATA[ https://videosbesads.thebesads.com/video/my-ad-video.mp4 ]]>
              </MediaFile>
            </MediaFiles>
            <VideoClicks>
              <ClickThrough><![CDATA[ https://www.coca-colacompany.com/ ]]></ClickThrough>
              <ClickTracking><![CDATA[ https://vast.thebesads.com/track/click ]]></ClickTracking>
            </VideoClicks>
          </Linear>
        </Creative>
        <Creative id="companion-set">
          <CompanionAds>
            <!-- Left Banner -->
            <Companion width="160" height="600" id="lband" AdSlotID="leftBanner">
              <StaticResource creativeType="image/jpeg">
                <![CDATA[ https://vast.thebesads.com/images/side-banner.jpg ]]>
              </StaticResource>
              <CompanionClickThrough>
                <![CDATA[ https://www.coca-colacompany.com/ ]]>
              </CompanionClickThrough>
            </Companion>

            <!-- Bottom Banner -->
            <Companion width="728" height="90" id="bband" AdSlotID="bottomBanner">
              <StaticResource creativeType="image/jpeg">
                <![CDATA[ https://vast.thebesads.com/images/bottom-banner.jpg ]]>
              </StaticResource>
              <CompanionClickThrough>
                <![CDATA[ https://www.coca-colacompany.com/ ]]>
              </CompanionClickThrough>
            </Companion>
          </CompanionAds>
        </Creative>
      </Creatives>
    </InLine>
  </Ad>
</VAST>
